<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentRendezVous">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Liste des Rendez-Vous"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="24sp"/>

    <ListView
        android:id="@+id/listViewRendezVous"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/item_rendezvous"/>

    <Button
        android:id="@+id/buttonAddRendezVous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nouveau Rendez-Vous" />

</LinearLayout>
